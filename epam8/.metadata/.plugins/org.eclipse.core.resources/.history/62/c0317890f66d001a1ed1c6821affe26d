package com.epam.tddjunit;

public class RemoveA {

	public String removeA(String str) {
		if(str.length() == 0) {
			return "";
		}
		char a = str.charAt(0);
		char b = str.charAt(1);
		String rem = str.substring(2);
		if(a == 'A' && b == 'A') return rem;
		else if(a == 'A') return b+rem;
		else return a+rem;
		
	}

}
